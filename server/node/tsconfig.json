{
  "compilerOptions": {
    "module": "ES2020",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist"
  },
  "watchOptions": {
    "watchDirectory": "usefsevents",
    "excludeDirectories": ["dist"],
    "excludeFiles": ["tsconfig.json"]
  },
  "compileOnSave": true,
  "include": ["./src"],
  "exclude": ["./dist"],
  "lib": ["es2015"]
}